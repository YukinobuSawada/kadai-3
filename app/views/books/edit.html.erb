<div class="col-md-6 col-md-offset-3">
<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_for(@book,url:"/books/#{@book.id}")do|f|%>
<div class="col-xs-12">
<label for="book_title">Title</label>
<%=f.text_field :title %>

</div>
<div class="field row">
	<label for="book_body">Opinion</label>
<%=f.text_area :body %>
</div>
<div class="actions row">
	<%=f.submit'Update Book',class: 'btn btn-primary col-xs-12%' %>
</div>
<% end %>

<%= link_to"Show",book_path(@book.id)%>
