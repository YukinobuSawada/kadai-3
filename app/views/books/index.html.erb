<div class="row">
  <div class="col-xs-3">
    <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
        
<%= render 'users/info', user: current_user %>
<%= render 'books/list', book: Book.new %>
</div>
<div class="col-xs-9">
<h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </tr>
</thead>
<% @books.each do |book| %>
<tr>
  <td>
    <%= link_to user_path(book.user.id)  do %>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg' ,fallback: "no_image.jpg" ,size:'40x40' %>
      <% end %>
    </td>
<td><%= link_to book.title,book_path(book.id) %></td>
<td><%= book.body %></td>


<td>
 <% if book.favorited_by?(current_user) %>
           
            <%= link_to book_favorites_path(book),method: :delete do %>
              <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
              <% end %>
              <%= book.favorites.count %>いいね
              
            
            <% else %>
            
              <%= link_to book_favorites_path(book),method: :post do %>
              <i class="fa fa-heart-o" aria-hidden="true"></i>
               <%= book.favorites.count %> いいね
              <% end %>
              <td>
             <%= book.book_comments.count %> コメント 
            <% end %>
          </td>

  
  </td>
<% end %>
</tr>

</table>
</div>
</div>
