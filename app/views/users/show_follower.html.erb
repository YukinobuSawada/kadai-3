<h3>Follower Users</h3>
<% if @users.empty? %>
ユーザーはいません
<% else %>
<% @user.followers.each do |user| %>
<table>
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th> </th>
		</tr>
	</thead>
	<tr>
		<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg' ,fallback: "no_image.jpg" ,size:'40x40'%></td>
	<td> <% user.name %></td>
	<td>フォロー数：<%= user.followings.count %></td>
	<td>フォロワー数：<%= user.followers.count %></td>
	<td><%= link_to '詳細',user_path(user)%></td>
</tr>
</table>
<% end %>
<% end %>