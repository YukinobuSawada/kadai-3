<h2>User info</h2>
<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for(@user) do |f| %>
    <div class="form-group has-icon">
        <label for="Name">Name</label>
        <%= f.text_field :name, autofocus: true %>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="form-group has-icon">
    <div class="user-edit-image">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60%>
    </div>
    <label for="Image">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div>
<label for="introduction">Introduction</label>
      <%= f.text_area :introduction %>
    <br><%= f.submit "Update User" %>
<% end %>